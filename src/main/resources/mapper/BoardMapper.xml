<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="site.joshua.acs.mapper.BoardMapper">

    <!--매핑시키는 메소드 명과 id 명치 일치해야 한다.-->
    <select id="boardCount" resultType="int">
    SELECT count(boardId) AS cnt FROM tbl_board
    </select>

    <select id="getList" resultType="site.joshua.acs.domain.Board">
        SELECT
            *
        FROM tbl_board
    </select>

    <select id="getBoard" parameterType="Long" resultType="site.joshua.acs.domain.Board">
        SELECT
            *
        FROM tbl_board where boardId=#{boardId};
    </select>

    <insert id="uploadBoard" parameterType="site.joshua.acs.domain.Board">
        INSERT INTO tbl_board (title, content, name)
        VALUES
            (#{title}, #{content}, #{name});
    </insert>

    <update id="updateBoard" parameterType="site.joshua.acs.domain.Board">
        UPDATE tbl_board
        SET title=#{title}, content=#{content}
        WHERE boardId=#{boardId};
    </update>

    <delete id="deleteBoard" parameterType="Long">
        DELETE
        FROM tbl_board
        WHERE boardId=#{boardId};
    </delete>

    <update id="viewCount">
        UPDATE tbl_board
        SET read = read + 1
        WHERE boardId=#{boardId};
    </update>
</mapper>